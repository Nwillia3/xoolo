		  ga('create', 'UA-102530090-1', 'auto');
		  ga('send', 'pageview');

		</script>
  </head>

  <nav class="navbar navbar-default nav-words">
	  <div class="container-fluid">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>

	     	<!--NavBar Brand image -->
	      <%= link_to(image_tag("logo/fblogo.png", :alt => "logo", :title => "Home"), "/") %>
	     
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	        <% if user_signed_in? %>
		      	<li> <%= link_to 'New post', new_post_path %> </li>
		      	<li> <%= link_to 'Edit Profile', edit_user_registration_path %> </li>
		      	<li> <%= link_to 'Log out', destroy_user_session_path, method: :delete %> </li>
		      <% end %>
	      </ul>
	      
	      <ul class="nav navbar-nav navbar-right">
	      	<li><%= link_to "Curriculum", curriculum_path %></li>
	        <li><a href="https://medium.com/xoolo" target="_blank">Blog</a></li>
	        <!-- <li><%= link_to "News", posts_path %></li> -->
	        <!-- <li><%= link_to "Daily term", terms_path %></li> -->
	        <!-- <li id= "test"><%= link_to "About Us", about_path %></li> -->

	      
				 
				</ul>
	      
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>

  <body>
	
		<!-- <div id="header">
			<% if current_page?(root_path) %>
				
			<% else %>
				<%= link_to "Back to All Posts", root_path %>
			<% end %>
		</div> -->

		<% flash.each do |name, msg| %>
			<%= content_tag(:div, msg, class: "alert") %>
		<% end %>

	<%= yield %>
    
  </body>

  <footer class="footer-distributed">
		<div class="footer-left">
			<h3>Xoolo<span><%= image_tag("logo/fblogo.png", width: '50px', height: '50px') %></span></h3>
			<p class="footer-links">
				<a href="https://www.facebook.com/getXoolo/" target="_blank" >Facebook</a>
				·
				<a href="https://twitter.com/_xoolo" target="_blank">Twitter</a>
