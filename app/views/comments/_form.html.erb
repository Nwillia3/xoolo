
<%= form_for([@post, @post.comments.build]) do |f| %>

	<div class="form-group">
		<label><%= f.label :name %></label>	
	<br>
		<label><%= f.text_field :name %></label>
	</div>

	<div class="form-group">
		<label><%= f.label :body %></label>	
	<br>
		<label><%= f.text_area :body %></label>
	</div>

	<br>
	<%= f.submit %>
<% end %>




