<div class="container">
	<p id="notice"><%= notice %></p>

	<h1 id="Morning">Finance term of the day</h1>

	<% @terms.each do |term| %>
	  <div class="POST col-sm-12">
	    <h3 class="date"><%= term.created_at.strftime("%B %d, %Y") %></h3>
	    <h2 class="title"><%= link_to term.title, term %></h2>
	    <p><%= term.definition %></p>
	   
	  </div>
	  <br>
	<% end %>


	<% if user_signed_in? %>
	
		<%= link_to 'New Term', new_term_path %>
	<% end %> 

</div>




