<%= form_for Welcome.new do |f| %>
  
  <form>
    <div class="form-group">
      <%= f.label :email %>
    
      <%= f.text_field :email, :type => "email", :class => "form-control", placeholder: "Email @address.com" %>
    </div>

    <div class="form-group">
      <%= f.label :source %>
      <%= f.text_field :source, :type => "text", :class => "form-control", placeholder: "How did you hear about us?" %>
    
    </div>

    <%= f.submit 'Submit', :class =>"btn btn-primary" %> 
    
  </form>
<% end %>
